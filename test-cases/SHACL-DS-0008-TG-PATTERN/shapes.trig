@prefix ex: <http://example.org/> .
@prefix shds: <https://w3id.org/shacl-ds#>.
@prefix sh: <http://www.w3.org/ns/shacl#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/> .

ex:shapeGraphPatternGood {
ex:shapeGraphPatternGood shds:targetGraphPattern ".*_good" .
ex:PersonShape
    a sh:NodeShape ;
    sh:targetClass foaf:Person ;    
    sh:property [                 
        sh:path foaf:knows ;
        sh:minCount 1 ;
    ] ;
}

ex:shapeGraphPatternBad {
ex:shapeGraphPatternBad shds:targetGraphPattern ".*_bad" .
ex:PersonShape
    a sh:NodeShape ;
    sh:targetClass foaf:Person ;    
    sh:property [                  
        sh:path foaf:knows ;
        sh:minCount 1 ;
    ] ;
}

ex:shapeGraphPatternExcludeGood {
ex:shapeGraphPatternExcludeGood shds:targetGraphPattern ".*" .
ex:shapeGraphPatternExcludeGood shds:targetGraphPatternExclude ".*_good" .
ex:PersonShape
    a sh:NodeShape ;
    sh:targetClass foaf:Person ;    
    sh:property [                 
        sh:path foaf:knows ;
        sh:minCount 1 ;
    ] ;
}
