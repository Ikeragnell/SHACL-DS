@prefix ex: <http://example.org/> .
@prefix shds: <http://www.w3.org/ns/shacl-dataset#>.
@prefix sh: <http://www.w3.org/ns/shacl#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .


ex:shapeGraphSPARQL shds:targetGraph shds:all.
ex:shapeGraphSPARQL shds:targetGraphCombination [
    shds:or (ex:dataGraph2 ex:dataGraph3);
].

ex:shapeGraphSPARQL {

ex: sh:declare [
		sh:prefix "ex" ;
		sh:namespace "http://example.org/"^^xsd:anyURI ;
	] ;

	sh:declare [
		sh:prefix "foaf" ;
		sh:namespace "http://xmlns.com/foaf/0.1/"^^xsd:anyURI ;
	] ;

    sh:declare [
		sh:prefix "shds" ;
		sh:namespace "http://www.w3.org/ns/shacl-dataset#"^^xsd:anyURI ;
	] ;
.

ex:knowsGoodPersonShape
	rdf:type sh:NodeShape ;
	sh:targetClass foaf:Person ;
	sh:sparql [
		a sh:SPARQLConstraint ;
		sh:prefixes ex: ;
		sh:select """
			SELECT $this
			WHERE {
				$this a foaf:Person ;
					foaf:knows ?someone .
				FILTER NOT EXISTS {
					GRAPH shds:default {
						?someone a foaf:Person .
					}
					$this foaf:knows ?someone .
				}
			}
			""" ;
	] ;
.
}
